<Shell
    x:Class="Bubble.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Bubble.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="Bubble"
    Shell.NavBarIsVisible="False">
    
    <ShellContent
        Title="Register"
        ContentTemplate="{DataTemplate views:Register}"
        Route="Register"
        NavigationPage.HasNavigationBar="False"/>

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate views:HomeView}"
        Route="HomeView"
        NavigationPage.HasNavigationBar="False"/>

    <ShellContent
        Route="detail"
        ContentTemplate="{DataTemplate views:DetailView}"
        NavigationPage.HasNavigationBar="False"/>

</Shell>